#!/bin/bash

POSITIONAL_ARGS=()

while [[ $# -gt 0 ]]; do
  case $1 in
    -t)
      TIME_INTV="$2"
      shift
      shift
      ;;
    -h|--help)
      exit 0
      ;;
    -*|--*)
      echo "Unknown option $1"
      exit 1
      ;;
    *)
      POSITIONAL_ARGS+=("$1")
      shift
      ;;
  esac
done

echo "Setting up..."

q_i=0
for ip in ${POSITIONAL_ARGS[@]}; do
    iptables -t mangle -A FORWARD -o br-lan -p tcp -d $ip -j NFQUEUE --queue-num $q_i
    q_i=$((q_i + 1))
done
